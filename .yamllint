# vi: ft=yaml

extends: default

yaml-files:
  - "*.yaml"
  - "*.yml"

rules:
  document-start: disable
  empty-lines:
    max: 2
    max-start: 2
    max-end: 2
  empty-values: enable
  key-duplicates: enable
  key-ordering: disable
  line-length:
    max: 120
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: false
  indentation: enable
  trailing-spaces: enable
